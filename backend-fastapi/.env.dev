# Development Environment Configuration

# Core settings
APP_ENV=dev
SECRET_KEY=dev_supersecretkey
JWT_SECRET_KEY=dev_jwtsupersecretkey
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=neuronest
POSTGRES_PASSWORD=neuronestpassword
POSTGRES_DB=neuronest_db
USE_POSTGRES=true

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
USE_REDIS=true

# Firebase/Supabase settings
USE_SUPABASE=false
# SUPABASE_URL=your-supabase-url
# SUPABASE_KEY=your-supabase-key
# FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project-id","private_key_id":"your-private-key-id","private_key":"your-private-key","client_email":"your-client-email","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"your-cert-url"}
# FIREBASE_WEB_API_KEY=your-firebase-web-api-key

# AI Providers
DEFAULT_AI_PROVIDER=gemini
# GEMINI_API_KEY=your-gemini-api-key
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Code Execution
ENABLE_CODE_EXECUTION=true
DOCKER_BASE_IMAGE=python:3.10-slim
DOCKER_NETWORK=none
DOCKER_TIMEOUT=30
DOCKER_MEMORY_LIMIT=512m

# File Storage
UPLOAD_DIR=./static/uploads
PROJECTS_DIR=./static/projects
MAX_UPLOAD_SIZE=10485760

# Speech Recognition
ENABLE_SPEECH_RECOGNITION=true
SPEECH_RECOGNITION_PROVIDER=google

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console